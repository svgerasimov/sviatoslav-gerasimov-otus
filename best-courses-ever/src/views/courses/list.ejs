<%- include('../partials/header', { title: 'Курсы' , user: typeof user !=='undefined' ? user : null }) %>

  <h1 class="text-2xl font-semibold mb-4">Все курсы</h1>

  <% if (courses.length===0) { %>
    <p>Курсов пока нет.</p>
    <% } %>

      <div class="grid gap-6 md:grid-cols-2">
        <% courses.forEach(c=> { %>
          <article class="bg-white rounded-lg shadow p-5">
            <a href="/courses/<%= c.id %>" class="text-xl font-bold hover:underline">
              <%= c.title %>
            </a>
            <p class="mt-1 text-gray-600">
              <%= c.description %>
            </p>
            <p class="mt-2 text-sm text-gray-500">
              Автор: <%= c.authorName %> •
                <span class="text-amber-500">★ <%= c.rating.toFixed(1) %></span> •
                <%= c.complexity %>
            </p>
          </article>
          <% }) %>
      </div>

      <%- include('../partials/footer') %>